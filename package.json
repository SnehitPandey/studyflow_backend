{
  "name": "studyflow-backend",
  "version": "1.0.0",
  "description": "AI-powered productivity & learning platform backend with MongoDB",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:worker": "tsx watch src/workers/chat.worker.ts",
    "build": "tsc && npm run copy-assets",
    "build:production": "NODE_ENV=production npm run build",
    "copy-assets": "cp -r uploads dist/ 2>/dev/null || true",
    "start": "node dist/server.ts",
    "start:worker": "node dist/workers/chat.worker.js",
    "start:production": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src//*.ts",
    "lint:fix": "eslint src//*.ts --fix",
    "format": "prettier --write src//*.{ts,json}",
    "format:check": "prettier --check src//*.{ts,json}",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postinstall": "npm run build:production",
    "docker:build": "docker build -t studyflow-backend .",
    "docker:build:prod": "docker build -f Dockerfile.prod -t studyflow-backend:prod .",
    "docker:up": "docker-compose up -d",
    "docker:up:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:seed": "tsx scripts/seed.ts",
    "db:reset": "tsx scripts/reset.ts",
    "migrate": "echo 'MongoDB does not require migrations'",
    "health": "curl -f http://localhost:5000/health || exit 1",
    "prepare": "husky install"
  },
  "keywords": [
    "studyflow",
    "backend",
    "api",
    "productivity",
    "learning",
    "ai",
    "mongodb",
    "nodejs",
    "express",
    "typescript",
    "socket.io",
    "redis",
    "openai"
  ],
  "author": "StudyFlow Team <dev@studyflow.app> (https://studyflow.app)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/studyflow/backend.git"
  },
  "bugs": {
    "url": "https://github.com/studyflow/backend/issues"
  },
  "homepage": "https://studyflow.app",
  "dependencies": {
    "axios": "^1.5.1",
    "bcrypt": "^5.1.1",
    "bullmq": "^4.12.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.1.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "ml-distance": "^4.0.1",
    "ml-kmeans": "^6.0.0",
    "moment": "^2.29.4",
    "mongoose": "^7.5.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "openai": "^4.52.7",
    "path": "^0.12.7",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "rate-limiter-flexible": "^8.0.1",
    "redis": "^4.6.8",
    "sharp": "^0.32.6",
    "slugify": "^1.6.6",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.3",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.15",
    "@types/crypto-js": "^4.1.2",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.2",
    "@types/jest": "^29.5.5",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.14.199",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.6",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.9",
    "@types/nodemailer": "^6.4.11",
    "@types/supertest": "^2.0.14",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "mongodb-memory-server": "^8.15.1",
    "nodemon": "^3.0.1",
    "prettier": "3.2.5",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.7",
    "canvas": "^2.11.2",
    "utf-8-validate": "^6.0.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm test"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "/_tests_//*.ts",
      "/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src//*.ts",
      "!src//*.d.ts",
      "!src/types//*"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "6.0.8"
    }
  }
}
